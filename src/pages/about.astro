---
import Card from "../components/Card.astro";
import Hero from "../components/Hero.astro";
import Layout from "../layouts/Layout.astro";
import Form from "../components/Form.astro";

const socialMediaLinks = [
  { href: "https://github.com/annapmarin", icon: "devicon-github-original", label: "GitHub" },
  { href: "https://www.linkedin.com/in/anna-p-marin/", icon: "devicon-linkedin-plain", label: "LinkedIn" },
]
---

<Layout>
  <Hero
    videoSrc="/videos/hero-video-2.mp4"
    title="About Me"
    subtitle="Anna Prats Marín"
  />
  <Card title="Nice to meet you" invert>
    <p class="big">
      I'm Anna Prats Marín, from Mallorca, Spain. I'm a web developer focused in
      creating both functional and beautiful web experiences.
    </p>
    <p class="big">
      With a background in digital communication, design and a passion for
      coding, I want to bring a unique perspective to every project.
    </p>
    <p class="big">
      Check my social media profiles to know more about me and my work.
    </p>
    <div class="social-links">
      {socialMediaLinks.map(link => (
        <a href={link.href} class="social-link" aria-label={link.label} target="_blank">
          <i class={link.icon}></i>
        </a>
      ))}
    </div>
  </Card>
  <Card class="connect-block" title="Let's connect">
    <Form />
  </Card>
</Layout>

<script src="/scripts/scroll-smooth-gsap.js" defer></script>

<style>
  .social-links {
    display: flex;
    gap: 1rem;
    padding-top: 3rem;
  }

  .social-link {
    color: inherit;
    text-decoration: none;
    font-size: 2.5rem;
    transition: color 0.3s ease-in-out;
  }

  .social-link i {
    transition: all 0.3s ease-in-out;
  }

  .social-link i:hover {
    font-size: 3rem;
  }
</style>