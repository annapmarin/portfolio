---
const { videoSrc, title, subtitle } = Astro.props;
---

<section class="hero">
  <video 
    src={videoSrc}
    autoplay
    muted
    loop
    playsinline
    class="hero__video"
  ></video>
  <div class="hero__content">
    <h1 class="hero__title">{title}</h1>
    <p set:html={subtitle} class="hero__subtitle"></p>
  </div>
</section>

<style>
  .hero {
    position: relative;
    width: 100%;
    height: 100dvh;
    overflow: hidden;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .hero__title {
    font-size: 4rem;
    margin: 0;
    text-transform: uppercase;
  }

  @media (max-width: 768px) {
    .hero__title {
      font-size: 3rem;
    }

    .hero__content {
      padding: 0 3rem;
    }
  }

  .hero__video {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    z-index: 0;
  }

  .hero__content {
    position: relative;
    z-index: 1;
    text-align: center;
    color: white;
    max-width: 890px;
  }
</style>