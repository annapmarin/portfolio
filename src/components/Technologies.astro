---
import { animateTechIcons } from '../scripts/icons-animation.js';
const techIcons = [
  { class: 'devicon-html5-plain', label: 'HTML' },
  { class: 'devicon-css3-plain', label: 'CSS' },
  { class: 'devicon-javascript-plain', label: 'JavaScript' },
  { class: 'devicon-java-plain', label: 'Java' },
  { class: 'devicon-git-plain', label: 'Git' },
  { class: 'devicon-github-original', label: 'GitHub' },
  { class: 'devicon-react-original', label: 'React' },
  { class: 'devicon-astro-plain', label: 'Astro' },
  { class: 'devicon-mysql-plain', label: 'MySQL' },
  { class: 'devicon-django-plain', label: 'Django' },
  { class: 'devicon-python-plain', label: 'Python' },
  { class: 'devicon-wordpress-plain', label: 'WordPress' },
  { class: 'devicon-tailwindcss-plain', label: 'Tailwind' },
  { class: 'devicon-xml-plain', label: 'XML' },
  { class: 'devicon-sass-original', label: 'Sass' },
  { class: 'devicon-figma-plain', label: 'Figma' },
];
---

<div class="technologies-grid" id="tech-grid">
  {techIcons.map(icon => (
    <div class="tech-icon" title={icon.label}>
      <i class={icon.class}></i>
      <label>{icon.label}</label>
    </div>
  ))}
</div>

<script type="module" src="/src/scripts/icons-animation.js"></script>

<style>
.technologies-grid {
  padding-top: 2rem;
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(150px, 1fr));
}

.tech-icon {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.tech-icon i {
  font-size: 70px;
}

.tech-icon i.colored {
  transition: all 0.2s ease-in-out;
}

.tech-icon label {
  font-size: 0.6rem;
  text-transform: lowercase;
  padding-top: 10px;
  opacity: 0;
  transform: translateY(0);
  pointer-events: none;
}

@media (min-width: 768px) {
  .technologies-grid {
    display: flex;
    gap: 3rem;
    flex-wrap: wrap;
  }

  .tech-icon i {
    font-size: 4rem;
  }
}
</style>
